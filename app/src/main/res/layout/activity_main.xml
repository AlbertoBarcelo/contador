<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar con el título "Hello Toast" -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:title="Hello Toast"
        android:theme="@style/CenteredToolbar" />

    <!-- Área amarilla con botones en los bordes y contador en el centro -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:background="#FFEB3B"
        android:padding="0dp">

        <!-- Botón para mostrar el Toast, en el borde superior -->
        <Button
            android:id="@+id/button_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOAST"
            style="@style/CustomButtonStyle"
        android:layout_alignParentTop="true" />

        <!-- TextView para mostrar el contador, centrado en el área amarilla -->
        <TextView
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="200dp"
            android:textColor="@color/primaryColor"
            android:layout_centerInParent="true" />

        <!-- Botón para incrementar el contador, en el borde inferior -->
        <Button
            android:id="@+id/button_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COUNT"
            style="@style/CustomButtonStyle"
        android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>
